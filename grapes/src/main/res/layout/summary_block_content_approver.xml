<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/summaryBlockContentApproverTitle"
        style="@style/PartialContentBlockTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/partialContentBlockTitleMarginHorz"
        android:layout_marginTop="@dimen/partialContentBlockTitleMarginVert"
        android:layout_marginEnd="@dimen/partialContentBlockTitleMarginHorz"
        android:layout_marginBottom="@dimen/partialContentBlockTitleMarginVert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="My name is title, Head Title" />

    <com.spendesk.grapes.list.content.summary.SummaryBlockRecyclerView
        android:id="@+id/summaryBlockContentApproverList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/inlineBlockContentListMarginHorz"
        android:layout_marginTop="@dimen/inlineBlockContentListMarginVert"
        android:layout_marginEnd="@dimen/inlineBlockContentListMarginHorz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/summaryBlockContentApproverTitle"
        tools:itemCount="3"
        tools:listitem="@layout/item_approver_status" />
</androidx.constraintlayout.widget.ConstraintLayout>